@{
    ViewData["Title"] = "Movie List";
}

@model List<FormResponse>

<!--implement bootstrap to beautify the table-->
<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>
   <!-- create table to list out each movie in the db-->
    <tbody>
        @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Category.CategoryName</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>

                    <!--allow for crud on each row of table-->
                    <td><a asp-controller="Home" asp-action="Edit" asp-route-formid="@x.FormId">
                        Edit</a></td>
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-formid="@x.FormId">Delete</a></td>
                </tr>
            }
    </tbody>
</table>